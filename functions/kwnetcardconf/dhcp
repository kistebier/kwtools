# Funktion dhcp um die Netzwerkkarten einzustellen{{{
#
# benˆtigt die Funktion ifconfig_check und net_conf
#
# usage: dhcp
#
dhcp()
{
	# Netzwerk Schnittstelle beenden
	ifconfig_check $ETH
	# Variablen einlesen
	if_conf_file "$OS" dhcp
	# Ob dhclient ausf√ºhrbar ist wird vom Script kwnetcardconf gepr√ºft.
	$DHCLIENT -lf ${DHCLIENT_LEASES_DIR}/dhclient${DHCLIENT_LEASES_TR}${ETH}.leases -pf /var/run/dhclient${DHCLIENT_LEASES_TR}${ETH}.pid $ETH
	if [ $? != 0 ] ; then
		MSG=$(gettext 'Entweder konnte das Kernel Modul f√ºr die Netzwerkkarte nicht geladen werden oder es ist kein dhcp Server erreichbar.')
		msgbox "$gv_Attention" "$MSG"
		break
	else
		iface_onboot
	fi
}
#}}}
